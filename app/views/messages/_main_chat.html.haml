.main
  .main__header
    .main__header__group
      .main__header__group__name
        = @group.name
      .main__header__group__menber
        .main__header__group__menber__title
          %p Menber::
        - @group.users.each do |user|
          .main__header__group__menber__person
            = user.name
    .main__header__edit
      = link_to edit_group_path(@group), class: "edit--btn" do
        %p edit

  .main__contents
    = render @messages

  .main__footer
    = form_for [@group, @message] do |f|
      .main__footer__form
        = f.text_field :text, placeholder: "type message", class: "main__footer__message"
        = f.label :image, class: "input__image" do
          = icon("fas", "image")
          = f.file_field :image, class: "input__form"
        = f.submit 'Send', class: "send__btn"